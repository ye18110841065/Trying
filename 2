  <script>
    const connectBtn = document.getElementById('connectBtn');
    const walletArea = document.getElementById('walletArea');

    async function connectWallet() {
      if (typeof window.ethereum === 'undefined') {
        walletArea.innerHTML = '<div style="color:#ec5656;margin-top:16px;">请先安装 <a href="https://metamask.io/" target="_blank" style="color:#36d1dc;text-decoration:underline;">MetaMask</a> 插件</div>';
        return;
      }

      try {
        const provider = new ethers.providers.Web3Provider(window.ethereum);
        await provider.send("eth_requestAccounts", []);
        const signer = provider.getSigner();
        const address = await signer.getAddress();
        walletArea.innerHTML = `<div class="wallet-address" title="钱包地址">${address}</div>`;
        connectBtn.textContent = "已连接钱包";
        connectBtn.disabled = true;
        connectBtn.style.opacity = 0.7;
      } catch (err) {
        walletArea.innerHTML = `<div style="color:#ec5656;margin-top:12px;">用户取消了连接请求</div>`;
      }
    }

    connectBtn.onclick = connectWallet;
  </script>
